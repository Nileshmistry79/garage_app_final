<% if @customer.errors.any? %>
	<ul> 
		<% @customer.errors.full_messages.each do |msg| %>
     		<li> <%= msg %> </li>
		<% end %>
	</ul>
<% end %>

<div class='row'>
	<div class='col-xs-12'>
<%= form_for(@customer, :html => {class: "form-horizontal", role: "form"})  do |f| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
              <%= f.label :cust_Name , "Customer Name" %>
          </div>  
          <div class="col-sm-10">
            <%= f.text_field :cust_Name, class: "form-control", placeholder: "Customer Name", autofocus: true  %>
          </div>
        </div>  
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :cust_Add , "Customer Address" %>
          </div>  
        <div class="col-sm-10">
            <%= f.text_area :cust_Add, class: "form-control", placeholder: "Customer Address" %>
        </div>
        </div>

	<div class="form-group">
		<div class="control-label col-sm-2">
	        <%= f.label :cust_mobile , "Mobile" %>
	        </div>
	<div class="col-sm-10">
          <%= f.text_field :cust_mobile, class: "form-control", placeholder: "10 digit Mobile Number" %>
        </div>  
        </div>

	<div class="form-group">
	<div class="control-label col-sm-2">
	  <%= f.label :cust_email , "E-mail" %>
	</div>  
	<div class="col-sm-10">
  	  <%= f.email_field :cust_email,class: "form-control", placeholder: "Email Id" %>
	</div>
	</div>	
	
		<div class="form-group">
		  <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>    
  </div>

<% end %>


</div>
</div>
