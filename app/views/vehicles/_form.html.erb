<% if @vehicle.errors.any? %>
	<ul> 
		<% @vehicle.errors.full_messages.each do |msg| %>
     		<li> <%= msg %> </li>
		<% end %>
	</ul>
<% end %>

<div class='row'>
	<div class='col-xs-12'>
<%= form_for(@vehicle, :html => {class: "form-horizontal", role: "form"})  do |f| %>

	<div class="form-group">
		<div class="control-label col-sm-2">
        <%= f.label :vehicle_no, "Vehcile Number" %>
  </div>
	 <div class="col-sm-10">
    <%= f.text_field :vehicle_no, class: "form-control", placeholder: "Vehcile Number", autofocus: true %>
</div>
</div>
	<div class="form-group">
	<div class="control-label col-sm-2">

<%= f.label :Model_name,  "Model Details" %>
</div>
<div class="col-sm-10">
<%= f.text_field :Model_name, class: "form-control", placeholder: "Customer Name", autofocus: true%>
</div>
</div>

	<div class="form-group">
	<div class="control-label col-sm-2">

<%= f.label :cust_id , "Customer Name" %>
</div>
<div class="col-sm-10">

<%= f.select(:customer_id, @all_customer.collect {|u| ["#{u.cust_Name}---#{u.cust_mobile}", u.id]}, :prompt => '--Select--', :class => "form-control") %>

</div>
</div>


		<div class="form-group">
		  <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>    
  </div>


<% end %>
</div>
</div>