<div class="center jumbotron">

<h1>Login Page</h1>

<%= form_tag('/', method: :post) do %>
<div class="col-md-2">
  <%= label_tag(:user_name , "User Name") %></div>
<div class="col-md-10">  <%= text_field_tag(:user_name) %>
</div>

<div class="col-md-2">
  <%= label_tag(:password , "Password") %>
  </div>
<div class="col-md-10">  
  <%= password_field_tag(:password) %>
</div>

<div class="col-md-2"></div>
<div class="col-md-4">
  <%= submit_tag("Login",class: "btn btn-primary btn-large btn-center") %>
</div>

<% end %>


<%= link_to 'ABOUT', about_path, class: "btn btn-danger btn-large" %>

</div>